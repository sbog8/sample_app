<% provide(:title, 'All users') %>
<h1>All users</h1>

<% unless @users.empty? %>
  <%= will_paginate @users %>
<% end %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>